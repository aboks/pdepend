{
    "name":        "pdepend/pdepend",
    "description": "Official version of pdepend to be handled with Composer",
    "homepage":    "http://pdepend.org",
    "keywords":    ["php", "static analysis", "metrics"],
    "type":        "library",
    "license":     "BSD",

    "minimum-stability": "RC",

    "authors": [
        {
            "name": "Manuel Pichler",
            "email": "mapi@pdepend.org",
            "homepage": "http://manuel-pichler.de/"
        }
    ],

    "bin": ["src/bin/pdepend"],

    "repositories": {
        "zend-framework": {                                                     
            "type": "composer",                                                 
            "url": "http://packages.zendframework.com/"                         
        },
        "rg-injektor": {
            "type": "vcs",
            "url": "http://github.com/manuelpichler/injektor"
        }
	},

    "require": {
        "php": ">=5.3",
        "nikic/php-parser": "dev-master",
        "rg/injektor": "dev-zf2-zend-code"
    },

    "autoload": {
        "psr-0": {
            "PHP\\Depend": "src/main/php/",
            "PHP_Depend": "src/main/php/"
        }
    }
}

